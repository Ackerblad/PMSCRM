                        </li> *@
                    </ul>
                </li>

                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#area" aria-expanded="false" aria-controls="area">
                        <i class="lni lni-network"></i>
                        <span>Area</span>
                    </a>
                    <ul id="area" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="" asp-controller="Area" asp-action="AddArea" class="sidebar-link">Add Area</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-area="" asp-controller="Area" asp-action="ViewAreas" class="sidebar-link">View Areas</a>
                        </li>
                        @* <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Update</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Delete</a>
                        </li> *@
                    </ul>
                </li>


                <!--Customers-->
                <li class="sidebar-item">
                    <a href="customers.html" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#customer" aria-expanded="false" aria-controls="customer">
                        <i class="lni lni-customer"></i>
                        <span>Customers</span>
                    </a>
                    <ul id="customer" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="" asp-controller="Customer" asp-action="AddCustomer" class="sidebar-link">Add Customer</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-area="" asp-controller="Customer" asp-action="ViewCustomers" class="sidebar-link">View Customers</a>
                        </li>
                        @* <li class="sidebar-item">
                             <a href="#" class="sidebar-link">Update</a>
                        </li>
                        <li class="sidebar-item">
                        <a href="#" class="sidebar-link">Delete</a>
                        </li> *@
                    </ul>

                </li>
            
            


            <!--Roles-->
            <li class="sidebar-item">
                <a href="Role/roles.html" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#role" aria-expanded="false" aria-controls="role">
                    <i class="lni lni-users"></i>
                    <span>Roles</span>
                </a>
                <ul id="role" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-area="" asp-controller="Role" asp-action="AddRole" class="sidebar-link">Add Role</a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-area="" asp-controller="Role" asp-action="ViewRoles" class="sidebar-link">View Roles</a>
                    </li>
                    @* <li class="sidebar-item">
                        <a href="#" class="sidebar-link">Update</a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">Delete</a>
                    </li> *@
                </ul>
            </li>
            
            
            


            <!--Companies-->
            <li class="sidebar-item">
                <a href="Company/company.html" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#company" aria-expanded="false" aria-controls="company">
                    <i class="lni lni-briefcase"></i>
                    <span>Companies</span>
                </a>
                <ul id="company" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-area="" asp-controller="Company" asp-action="AddCompany" class="sidebar-link">Add Company</a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-area="" asp-controller="Company" asp-action="ViewCompanies" class="sidebar-link">View Companies</a>
                    </li>
                    @* <li class="sidebar-item">
