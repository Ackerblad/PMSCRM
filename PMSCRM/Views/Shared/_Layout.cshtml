                        <a href="#" class="sidebar-link">Update</a>
                        </li>
                        <li class="sidebar-item">
                        <a href="#" class="sidebar-link">Delete</a>
                        </li> *@
                    </ul>
                </li>


            


                <!-- Settings -->
                <li class="sidebar-item">
                    <a asp-area="" asp-controller="TaskProcessArea" asp-action="AddTaskProcessAreas" class="sidebar-link">
                        <i class="lni lni-cog"></i>
                        <span>Settings</span>
                        
                    </a>
                </li>
            </ul>

            <!-- Sidebar Footer (Logout) -->
            <div class="sidebar-footer">
                <a asp-area="" asp-controller="Login" asp-action="Index" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main content area -->
        <div class="main">
            <!-- Navbar/Header -->
            <nav class="navbar navbar-expand px-4 py-3">
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">John John</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main page content from views -->
            <main class="content px-3 py-4">
                <div class="container-fluid">
                    
                    <!--Buttons-->
                    <main class="content px-3 py-4">
                        <div class="container-fluid">
                            <div class="mb-3">
                                <ul id="nav-itemss" class="nav nav-justified">
                                    <li class="nav-item">
                                        <a href="Task/addTask.html" type="button" class="btn btn-custom btn-lg rounded-pill">
                                            Tasks <span class="badge bg-danger">4</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="team.html" class="btn btn-custom btn-lg rounded-pill" href="#">Team</a>
