                    </a>
                </li>

                <!-- Task Menu -->
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#task" aria-expanded="false" aria-controls="task">
                        <i class="lni lni-agenda"></i>
                        <span>Task</span>
                    </a>
                    <ul id="task" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="" asp-controller="Task" asp-action="AddTask" class="sidebar-link">Add Task</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-area="" asp-controller="Task" asp-action="ViewTasks" class="sidebar-link">View Tasks</a>
                        </li>
