<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PMSCRM</title>

    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="~/css/search.css">
    <link rel="stylesheet" href="~/css/buttons.css">

@RenderSection("styles", required: false)

</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a href="#">PMSCRM</a>
                </div>
            </div>

            <ul class="sidebar-nav">
                @* <!-- Profile -->
                <li class="sidebar-item">
                    <a asp-controller="User" asp-action="Profile" class="sidebar-link">
                        <i class="lni lni-user"></i>
                        <span>Profile</span>
                    </a>
                </li> *@

                <!-- User -->
                @if (User.IsInRole("User"))
                {
                    <li class="sidebar-item">
                        <a asp-controller="TaskProcessAreaUserCustomer" asp-action="ViewTaskProcessAreaUserCustomerForUser" class="sidebar-link">
                            <i class="lni lni-crown-3"></i>
                            <span>Task-Process-Area-User-Customer</span>
                        </a>
                    </li>
                }
                

                <!-- Admin-Specific Links -->
                @if (User.IsInRole("Admin"))
                {
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#area" aria-expanded="false" aria-controls="area">
                            <i class="lni lni-network"></i>
                            <span>Areas</span>
                        </a>
                        <ul id="area" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="Area" asp-action="AddArea" class="sidebar-link">Add Area</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="Area" asp-action="ViewAreas" class="sidebar-link">View Areas</a>
                            </li>
                        </ul>
                    </li>

                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#process" aria-expanded="false" aria-controls="process">
                            <i class="lni lni-spinner-solid"></i>
                            <span>Processes</span>
                        </a>
                        <ul id="process" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="Process" asp-action="AddProcess" class="sidebar-link">Add Process</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="Process" asp-action="ViewProcesses" class="sidebar-link">View Processes</a>
                            </li>
                        </ul>
                    </li>

                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#task" aria-expanded="false" aria-controls="task">
                            <i class="lni lni-agenda"></i>
                            <span>Tasks</span>
                        </a>
                        <ul id="task" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="Task" asp-action="AddTask" class="sidebar-link">Add Task</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="Task" asp-action="ViewTasks" class="sidebar-link">View Tasks</a>
                            </li>
                        </ul>
                    </li>

                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#customer" aria-expanded="false" aria-controls="customer">
                            <i class="lni lni-customer"></i>
                            <span>Customers</span>
                        </a>
                        <ul id="customer" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="Customer" asp-action="AddCustomer" class="sidebar-link">Add Customer</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="Customer" asp-action="ViewCustomers" class="sidebar-link">View Customers</a>
                            </li>
                        </ul>
                    </li>

                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#user" aria-expanded="false" aria-controls="user">
                            <i class="lni lni-users"></i>
                            <span>Users</span>
                        </a>
                        <ul id="user" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="User" asp-action="AddUser" class="sidebar-link">Add User</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="User" asp-action="ViewUsers" class="sidebar-link">View Users</a>
                            </li>
                        </ul>
                    </li>

                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#taskProcessArea" aria-expanded="false" aria-controls="taskProcessArea">
                            <i class="lni lni-users"></i>
                            <span>TaskProcessAreas</span>
                        </a>
                        <ul id="taskProcessArea" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="taskProcessArea" asp-action="AddTaskProcessArea" class="sidebar-link">Add TPA</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="taskProcessArea" asp-action="ViewTaskProcessAreas" class="sidebar-link">View TPA</a>
                            </li>
                        </ul>
                    </li>

                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse" data-bs-target="#taskProcessAreaUserCustomer" aria-expanded="false" aria-controls="taskProcessAreaUserCustomer">
                                <i class="lni lni-users"></i>
                            <span>TaskProcessAreaUserCustomers</span>
                            </a>
                        <ul id="taskProcessAreaUserCustomer" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                                <li class="sidebar-item">
                                    <a asp-controller="TaskProcessAreaUserCustomer" asp-action="AddTaskProcessAreaUserCustomer" class="sidebar-link">Add TPAUC</a>
                                </li>
                                <li class="sidebar-item">
                                    <a asp-controller="TaskProcessAreaUserCustomer" asp-action="ViewTaskProcessAreaUserCustomer" class="sidebar-link">View TPAUC</a>
                                </li>
                            </ul>                   
                    </li>
                }

                <!-- Logout -->
                <li class="sidebar-item">
                    <a asp-controller="Login" asp-action="Logout" class="sidebar-link">
                        <i class="lni lni-exit"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main content -->
        <div class="main">
            <nav class="navbar navbar-expand px-4 py-3">
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                                @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="content px-3 py-5">
                <div class="container-fluid">
                    <!-- Search Section -->
                    <div class="search-section mb-3">
                        <!-- Search Bar and Button -->
                        <div class="search-bar-container">
                            <!-- Search Bar -->
                            <input type="text" id="searchInput" maxlength="50" class="form-control" placeholder="Search..." aria-label="Search">

                            <!-- Filter Dropdown Button -->
                            <div class="dropdown">
                                <button class="btn btn-filter dropdown-toggle" id="filterDropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Filter 
                                </button>
                                <!-- Dropdown filter names -->
                                <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                                    <li><a href="#" class="filter-option" data-value="area">Area</a></li>
                                    <li><a href="#" class="filter-option" data-value="task">Task</a></li>
                                    <li><a href="#" class="filter-option" data-value="process">Process</a></li>
                                    <li><a href="#" class="filter-option" data-value="user">User</a></li>
                                    <li><a href="#" class="filter-option" data-value="customer">Customer</a></li>
                                </ul>

                                <!-- Search Button -->
                                <button class="btn btn-search" id="searchButton">Search</button>
                            </div>
                        </div>
                    </div>




                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous" async></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" defer></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const selectedFilters = new Set();

        // Handle filter selection
        document.querySelectorAll('.filter-option').forEach(function (option) {
            option.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();  // Prevent dropdown from closing

                const filterValue = option.getAttribute('data-value');

                // Toggle the selection
                if (selectedFilters.has(filterValue)) {
                    selectedFilters.delete(filterValue);
                    option.classList.remove('selected');
                } else {
                    selectedFilters.add(filterValue);
                    option.classList.add('selected');
                }

                console.log('Selected Filters:', Array.from(selectedFilters));
            });
        });

        document.getElementById('searchButton').addEventListener('click', function () {
            const query = document.getElementById('searchInput').value;

            const filters = Array.from(selectedFilters).join(',');
            const resultsPageUrl = `/results?query=${encodeURIComponent(query)}&filters=${encodeURIComponent(filters)}`;

            window.location.href = resultsPageUrl;

            console.log('Search Query:', query);
            console.log('Selected Filters:', Array.from(selectedFilters));
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
