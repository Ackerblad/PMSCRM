                        <a href="#" class="sidebar-link">Delete</a>
                    </li> *@
                </ul>
            </li>
            
            
            

            <!--Process-->
            <li class="sidebar-item">
                <a href="Process/process.html" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#process" aria-expanded="false" aria-controls="process">
                    <i class="lni lni-spinner-solid"></i>
                    <span>Process</span>
                </a>
                <ul id="process" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                            <a asp-area="" asp-controller="Process" asp-action="AddProcess" class="sidebar-link">Add Process</a>
                    </li>
                    <li class="sidebar-item">
                            <a asp-area="" asp-controller="Process" asp-action="ViewProcesses" class="sidebar-link">View Processes</a>
                    </li>
                    @* <li class="sidebar-item">
