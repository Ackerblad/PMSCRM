@model PMSCRM.ViewModels.ProcessViewModel
@{
    ViewData["Title"] = "Add Process";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3">Process</h3>
<div class="card shadow-sm p-4 mb-4">
<form class="was-validated" asp-controller="Process" asp-action="AddProcess" method="post">

        <div class="mb-3">
            <label for="AreaId" class="form-label">Select Area</label>
            <select asp-for="Process.AreaId" asp-items="Model.Areas" class="form-select" required>
                <option value="">Choose an area...</option>
            </select>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please select an area.</div>
        </div>

        <div class="mb-3">
            <input type="text" class="form-control" asp-for="Process.Name" placeholder="Process Name" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <div class="mb-3">
            <input type="number" class="form-control" asp-for="Process.Duration" placeholder="Duration in hours" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <div class="mb-3">
            <textarea asp-for="Process.Description" class="form-control" maxlength="255" rows="5" placeholder="Description"></textarea>
        </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

</div>
