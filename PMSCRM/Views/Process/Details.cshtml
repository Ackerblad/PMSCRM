@model PMSCRM.Models.Process

@{
    ViewData["Title"] = "Process Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h3 class="fw-bold fs-4 mb-3">Process Details</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">Process ID: @Model.ProcessId</h6>

        <p class="card-text">
            <strong>Duration:</strong> @Model.Duration hours
        </p>

        <p class="card-text">
            <strong>Description:</strong> @Model.Description
        </p>

        <p class="card-text">
            <strong>Area:</strong> @Model.Area?.Name ?? "No Area Assigned"
        </p>

        <a href="@Url.Action("ViewProcesses", "Process")" class="btn btn-secondary">Back to List</a>
        <a href="@Url.Action("EditProcess", "Process", new { id = @Model.ProcessId })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("DeleteProcess", "Process", new { id = @Model.ProcessId })" class="btn btn-danger">Delete</a>
    </div>
</div>
