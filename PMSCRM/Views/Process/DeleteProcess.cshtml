@model PMSCRM.Models.Process

@{
    ViewData["Title"] = "Delete Process";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this process?</h4>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Area:</strong> @Model.Area.Name</p>
        <p><strong>Duration:</strong> @Model.Duration min</p>
        <p><strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProcessId" method="post">
        <button type="submit" class="btn btn-delete">Delete</button>
        <a href="@Url.Action("ViewProcesses", "Process")" class="btn btn-cancel">Cancel</a>
    </form>
</div>