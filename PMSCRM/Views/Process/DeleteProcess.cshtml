@model PMSCRM.Models.Process

@{
    ViewData["Title"] = "Delete Process";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3 text-danger">Delete Process</h3>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this process?</h4>
    <p><strong>Process Name:</strong> @Model.Name</p>
    <p><strong>Duration:</strong> @Model.Duration min</p>
    <p><strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ProcessId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("ViewProcesses", "Process")" class="btn btn-secondary">Cancel</a>
</form>
