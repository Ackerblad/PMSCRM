@model List<PMSCRM.Models.Process>

@{
    ViewData["Title"] = "View Processes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/buttons.css">
<link rel="stylesheet" href="~/css/table.css">

<div class="card shadow-sm p-4 mb-4">
    @if (Model != null && Model.Any())
    {
        <table class="table-striped table-hover custom-table">
            <thead>
                <tr>
                    <th>
                        <a asp-action="ViewProcesses" asp-route-sortBy="Name" asp-route-sortDirection="@((ViewBag.CurrentSort == "Name" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")">
                            Process
                            @if (ViewBag.CurrentSort == "ProcessName")
                            {
                                <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                            }
                            else
                            {
                                <span>▲</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="ViewProcesses" asp-route-sortBy="Name" asp-route-sortDirection="@((ViewBag.CurrentSort == "Name" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")">
                            Area
                            @if (ViewBag.CurrentSort == "AreaName")
                            {
                                <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                            }
                            else
                            {
                                <span>▲</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="ViewProcesses" asp-route-sortBy="Duration" asp-route-sortDirection="@((ViewBag.CurrentSort == "Duration" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")">
                            Duration (min)
                            @if (ViewBag.CurrentSort == "Duration")
                            {
                                <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                            }
                            else
                            {
                                <span>▲</span>
                            }
                        </a>
                    </th>
                    <th>Description</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var process in Model)
                {
                    <tr>
                        <td class="text-truncate" style="max-width: 150px;">
                            <a href="/Process/Details/@process.ProcessId" style="color: black; text-decoration: none;">@process.Name</a>
                        </td>

                        <td class="text-truncate" style="max-width: 150px;">
                            <a href="/Process/Details/@process.ProcessId" style="color: black; text-decoration: none;">@process.Area.Name</a>
                        </td>

                        <td>
                            <a href="/Process/Details/@process.ProcessId" style="color: black; text-decoration: none;">@process.Duration</a>
                        </td>

                        <td class="text-truncate" style="max-width: 300px;">
                            <a href="/Process/Details/@process.ProcessId" style="color: black; text-decoration: none;">@process.Description</a>
                        </td>

                        <td>
                            <a href="/Process/EditProcess/@process.ProcessId" class="btn btn-edit">Edit</a>
                            <a href="/Process/DeleteProcess/@process.ProcessId" class="btn btn-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No processes found.</p>
    }

    <div>
        <a asp-area="" asp-controller="Process" asp-action="AddProcess" class="btn btn-add">Add Process</a>
    </div>
</div>
