@model List<PMSCRM.Models.Process>

@{
    ViewData["Title"] = "View Processes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3">Process List</h3>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="ViewProcesses" asp-route-sortBy="Name" asp-route-sortDirection="@((ViewBag.CurrentSort == "Name" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")" class="text-light">
                        Process Name
                        @if (ViewBag.CurrentSort == "ProcessName")
                        {
                            <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                        }
                        else
                        {
                            <span>▲</span> <!-- Default arrow for ascending -->
                        }
                    </a>
                </th>
@*                 <th>Process Name</th> *@
                <th>
                    <a asp-action="ViewProcesses" asp-route-sortBy="Name" asp-route-sortDirection="@((ViewBag.CurrentSort == "Name" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")" class="text-light">
                        Area Name
                        @if (ViewBag.CurrentSort == "AreaName")
                        {
                            <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                        }
                        else
                        {
                            <span>▲</span> <!-- Default arrow for ascending -->
                        }
                    </a>
                </th>
                @* <th>Duration (hours)</th> *@
                <th>
                    <a asp-action="ViewProcesses" asp-route-sortBy="Duration" asp-route-sortDirection="@((ViewBag.CurrentSort == "Duration" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")" class="text-light">
                        Duration
                        @if (ViewBag.CurrentSort == "Duration")
                        {
                            <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                        }
                        else
                        {
                            <span>▲</span> <!-- Default arrow for ascending -->
                        }
                    </a>
                </th>
                <th>Description</th>
                <th class="text-end">Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var process in Model)
            {
                <tr>
                    <td>
                        <a href="/Process/Details/@process.ProcessId" class="text-decoration-none">
                            @process.Name
                        </a>
                    </td>
                    <td>
                        @if (process.Area != null)
                        {
                            @process.Area.Name
                        }
                        else
                        {
                            <span>No Area Assigned</span> 
                        }
                    </td>
                    <td>@process.Duration</td>
                    <td>
                        @if (!string.IsNullOrEmpty(process.Description))
                        {
                            @if (process.Description.Length > 50)
                            {
                                <span>@process.Description.Substring(0, 50)...</span>
                                <a href="/Process/Details/@process.ProcessId" class="text-decoration-none">Read More</a>
                            }
                            else
                            {
                                <span>@process.Description</span>
                            }
                        }
                        else
                        {
                            <span>No description available.</span>
                        }
                    </td>
                    <td class="text-end">
                       
                        <a href="/Process/EditProcess/@process.ProcessId" class="btn btn-primary btn-sm me-1">Edit</a>
                        <a href="/Process/DeleteProcess/@process.ProcessId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No processes found.</p>
}

<a asp-area="" asp-controller="Process" asp-action="AddProcess" class="btn btn-success">Add new Process</a>
