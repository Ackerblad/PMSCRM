@model PMSCRM.Models.Task

@{
    ViewData["Title"] = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this task?</h4>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Duration:</strong> @Model.Duration min</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.TaskId" method="post">
        <button type="submit" class="btn btn-delete">Delete</button>
        <a href="/Task/ViewTasks" class="btn btn-cancel">Cancel</a>
    </form>
</div>
