@model PMSCRM.Models.Task

@{
    ViewData["Title"] = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h3 class="fw-bold fs-4 mb-3 text-danger">Delete Task</h3>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this task?</h4>
    <p><strong>Task Name:</strong> @Model.Name</p>
    <p><strong>Duration:</strong> @Model.Duration hours</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.TaskId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Task/ViewTasks" class="btn btn-secondary">Cancel</a>
</form>
