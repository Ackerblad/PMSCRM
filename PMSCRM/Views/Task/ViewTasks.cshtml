@model List<PMSCRM.Models.Task>

@{
    ViewData["Title"] = "View Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3">Tasks List</h3>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                @* <th>Task ID</th> *@
                <th>Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        <a href="/Task/Details/@task.TaskId" class="text-decoration-none">
                            @task.Name
                        </a>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(task.Description))
                        {
                            @if (task.Description.Length > 50)
                            {
                                <span>@task.Description.Substring(0, 50)...</span>
                                <a href="/Task/Details/@task.TaskId" class="text-decoration-none">Read More</a>
                            }
                            else
                            {
                                <span>@task.Description</span>
                            }
                        }
                        else
                        {
                            <span>No description available.</span>
                        }
                    </td>
                    <td>@task.Duration</td>
                    <td>
                        <a href="/Task/EditTask/@task.TaskId" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/Task/DeleteTask/@task.TaskId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks found.</p>
}

<a asp-area="" asp-controller="Task" asp-action="AddTask" class="btn btn-success">Add new Task</a>


