@model List<PMSCRM.Models.Task>

@{
    ViewData["Title"] = "View Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/table.css">
<link rel="stylesheet" href="~/css/table.css">

<div class="card shadow-sm p-4 mb-4">
    @if (Model != null && Model.Any())
    {
        <table class="table-striped table-hover custom-table">
            <thead>
                <tr>
                    <th>
                        <a asp-action="ViewTasks" asp-route-sortBy="Name" asp-route-sortDirection="@((ViewBag.CurrentSort == "Name" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")">
                            Task
                            @if (ViewBag.CurrentSort == "Name")
                            {
                                <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                            }
                            else
                            {
                                <span>▲</span> 
                            }
                        </a>
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        <a asp-action="ViewTasks" asp-route-sortBy="Duration" asp-route-sortDirection="@((ViewBag.CurrentSort == "Duration" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")">
                            Duration
                            @if (ViewBag.CurrentSort == "Duration")
                            {
                                <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                            }
                            else
                            {
                                <span>▲</span> 
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="ViewTasks" asp-route-sortBy="TimeStamp" asp-route-sortDirection="@((ViewBag.CurrentSort == "TimeStamp" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")">
                            Created
                            @if (ViewBag.CurrentSort == "TimeStamp")
                            {
                                <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                            }
                            else
                            {
                                <span>▲</span>
                            }
                        </a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td class="text-truncate" style="max-width: 150px;">
                            <a href="/Task/Details/@task.TaskId" style="color: black; text-decoration: none;">@task.Name</a>
                        </td>
                        <td class="text-truncate" style="max-width: 300px;">
                            <a href="/Task/Details/@task.TaskId" style="color: black; text-decoration: none;">@task.Description</a>
                        </td>
                        <td>
                            <a href="/Task/Details/@task.TaskId" style="color: black; text-decoration: none;">@task.Duration</a>
                        </td>
                        <td>@task.Duration</td>
                        <td>@task.Timestamp</td>
                        <td>
                            <a href="/Task/EditTask/@task.TaskId" class="btn btn-edit">Edit</a>
                            <a href="/Task/DeleteTask/@task.TaskId" class="btn btn-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tasks found.</p>
    }
    <div>
        <a asp-area="" asp-controller="Task" asp-action="AddTask" class="btn btn-add">Add Task</a>
    </div>
</div>


