@using PMSCRM.Utilities
@model PasswordReset
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <form class="login-form text-center" asp-action="ResetPassword" method="post" style="width: 300px;">

            @if (ViewBag.Message != null)
            {
                <div class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger") mt-3">@ViewBag.Message</div>
            }

            <input type="hidden" asp-for="Token" />

            <div class="form-group mb-3">
                <input type="password" asp-for="NewPassword" class="form-control rounded-pill form-control-lg" placeholder="New Password" required minlength="6" />
            </div>

            <div class="form-group mb-3">
                <input type="password" name="ConfirmPassword" class="form-control rounded-pill form-control-lg" placeholder="Confirm Password" required minlength="6" />
            </div>

            <button type="submit" class="btn mt-4 btn-login btn-block w-100 text-uppercase rounded-pill btn-lg">Reset Password</button>
        </form>
    </div>
</body>
</html>
