@model PMSCRM.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
<div class="alert alert-danger">
    <h4>Are you sure you want to delete this user?</h4>
    <p><strong>Role:</strong> @Model.Role.Name</p>
    <p><strong>Email:</strong> @Model.EmailAddress</p>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" method="post">
    <button type="submit" class="btn btn-delete">Delete</button>
    <a href="/User/ViewUsers" class="btn btn-cancel">Cancel</a>
</form>
</div>
