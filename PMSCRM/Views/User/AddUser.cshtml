@model PMSCRM.Utilities.UserRegistration

@{
    ViewData["Title"] = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
    <form class="was-validated" asp-controller="User" asp-action="AddUser" method="post">
        <div class="mb-3 mt-3">
            <label for="roleId" class="form-label">Role</label>
            <select class="form-select" asp-for="RoleId" required>
                <option value="">Select a role...</option>
                @foreach (var role in ViewBag.Roles as List<SelectListItem>)
                {
                    <option value="@role.Value">@role.Text</option>
                }
            </select>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please select a role.</div>
        </div>

        <div class="mb-3">
            <input type="text" class="form-control" id="emailAddress" placeholder="Email" maxlength="100" name="EmailAddress" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="firstName" placeholder="First Name" maxlength="100" name="FirstName" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="lastName" placeholder="Last Name" maxlength="100" name="LastName" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="phoneNumber" placeholder="Phone Number" maxlength="100" name="PhoneNumber" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <button type="submit" class="btn btn-submit">Submit</button>
    </form>
</div>

