@model List<PMSCRM.Models.User>

@{
    ViewData["Title"] = "View Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3">User List</h3>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Role ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.RoleId</td>
                    <td>@user.EmailAddress</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a href="/User/EditUser/@user.UserId" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/User/DeleteUser/@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}

<a href="/User/AddUser" class="btn btn-success mt-3">Add New User</a>
