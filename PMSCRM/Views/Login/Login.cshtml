@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <form class="login-form text-center" method="post" action="/User/Login" style="width: 300px;">
            @* Error message*@
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }

            <div class="form-group mb-3">
                <input type="text" class="form-control rounded-pill form-control-lg" name="EmailAddress" placeholder="Email" required>
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control rounded-pill form-control-lg" name="Password" placeholder="Password" required>
            </div>
            <div class="forgot-link d-flex align-items-center justify-content-between mt-3">
                <div class="form-check d-flex align-items-center">
                    <input type="checkbox" class="form-check-input" name="RememberMe" id="remember">
                    <label for="remember" class="ms-2">Remember Me</label>
                </div>
                <a href="#">Forgot Password</a>
            </div>
            <button type="submit" class="btn mt-4 btn-login btn-block w-100 text-uppercase rounded-pill btn-lg">Login</button>
        </form>
    </div>
</body>
</html>