@model List<PMSCRM.Models.Area>

@{
    ViewData["Title"] = "View Areas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3">Area List</h3>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="ViewAreas" asp-route-sortBy="Name" asp-route-sortDirection="@((ViewBag.CurrentSort == "Name" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")" class="text-light">
                        Name
                        @if (ViewBag.CurrentSort == "Name")
                        {
                            <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                        }
                        else
                        {
                            <span>▲</span> <!-- Default arrow for ascending -->
                        }
                    </a>
                </th>

                <th>
                    <a asp-action="ViewAreas" asp-route-sortBy="Description" asp-route-sortDirection="@((ViewBag.CurrentSort == "Description" && ViewBag.CurrentSortDirection == "asc") ? "desc" : "asc")" class="text-light">
                        Description
                        @if (ViewBag.CurrentSort == "Description")
                        {
                            <span>@(ViewBag.CurrentSortDirection == "asc" ? "▲" : "▼")</span>
                        }
                        else
                        {
                            <span>▲</span> <!-- Default arrow for ascending -->
                        }
                    </a>
                </th>

                <th class="text-end px-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var area in Model)
            {
                <tr>
                    <td>@area.Name</td>
                    <td>@area.Description</td>
                    <td class="text-end">
                        <a href="/Area/EditArea/@area.AreaId" class="btn btn-primary btn-sm custom">Edit</a>
                        <a href="/Area/DeleteArea/@area.AreaId" class="btn btn-danger btn-sm custom">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No areas found.</p>
}

<a asp-area="" asp-controller="Area" asp-action="AddArea" class="btn btn-success">Add new Area</a>

<script>
    $(function () {
        $('[data-bs-toggle="tooltip"]').tooltip();
    });
</script>

<style>
    .custom {
        width: 78px !important;
    }
</style>
