@model PMSCRM.Models.Area

@{
    ViewData["Title"] = "Delete Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3 text-danger">Delete Area</h3>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this area?</h4>
    <p><strong>Area Name:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.AreaId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Area/ViewAreas" class="btn btn-secondary">Cancel</a>
</form>
