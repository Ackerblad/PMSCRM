@model PMSCRM.Models.Area

@{
    ViewData["Title"] = "Delete Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this area?</h4>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.AreaId" method="post">
        <button type="submit" class="btn btn-delete">Delete</button>
        <a href="/Area/ViewAreas" class="btn btn-cancel">Cancel</a>
    </form>
</div>
