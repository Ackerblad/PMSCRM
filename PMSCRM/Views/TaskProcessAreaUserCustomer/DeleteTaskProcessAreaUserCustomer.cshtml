@model PMSCRM.ViewModels.TaskProcessAreaUserCustomerDisplayViewModel
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this TPAUC?</h4>
        <p><strong>Task:</strong> @Model.TaskName</p>
        <p><strong>Process:</strong> @Model.ProcessName</p>
        <p><strong>Area:</strong> @Model.AreaName</p>
        <p><strong>User:</strong> @Model.UserName</p>
        <p><strong>Customer:</strong> @Model.CustomerName</p>
        <p><strong>Status:</strong> @((PMSCRM.Utilities.TaskStatus)Model.Status)</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.TaskProcessAreaUserCustomerId" method="post">
        <button type="submit" class="btn btn-delete">Delete</button>
        <a href="/TaskProcessAreaUserCustomer/ViewTaskProcessAreaUserCustomer" class="btn btn-cancel">Cancel</a>
    </form>
</div>
