@using PMSCRM.ViewModels
@model IEnumerable<TaskProcessAreaUserCustomerDisplayViewModel>

<div class="card shadow-sm p-4 mb-4">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <table class="table table-sm table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th class="text-center">Area</th>
                <th class="text-center">Process</th>
                <th class="text-center">Task</th>
                <th class="text-center">User</th>
                <th class="text-center">Customer</th>
                <th class="text-center">Start Date</th>
                <th class="text-center">End Date</th>
                <th class="text-center">Status</th>
                <th class="text-center">Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center small">@item.AreaName</td>
                        <td class="text-center small">@item.ProcessName</td>
                        <td class="text-center small">@item.TaskName</td>
                        <td class="text-center small">@item.UserName</td>
                        <td class="text-center small">@item.CustomerName</td>
                        <td class="text-center small">@item.StartDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center small">@item.EndDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center small">@((PMSCRM.Utilities.TaskStatus)item.Status)</td>
                        <td class="text-center small">@item.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="@Url.Action("EditTaskProcessAreaUserCustomer", "TaskProcessAreaUserCustomer", new { id = item.TaskProcessAreaUserCustomerId })" class="btn btn-primary btn-sm custom">Edit</a>
                            <form action="@Url.Action("DeleteTaskProcessAreaUserCustomer", "TaskProcessAreaUserCustomer", new { id = item.TaskProcessAreaUserCustomerId })" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm custom" onclick="return confirm('Are you sure you want to delete this Task Process Area User Customer?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center small">No Task Process Area User Customer found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .custom {
        width: 78px !important;
    }
</style>

