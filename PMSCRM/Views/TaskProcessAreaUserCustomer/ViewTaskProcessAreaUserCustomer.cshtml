@model IEnumerable<PMSCRM.ViewModels.TaskProcessAreaUserCustomerDisplayViewModel>

<h3 class="fw-bold fs-4 mb-4">Task Process Area User Customer</h3>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Task Name</th>
            <th>Process Name</th>
            <th>Area Name</th>
            <th>User Name</th>
            <th>Customer Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TaskName</td>
                    <td>@item.ProcessName</td>
                    <td>@item.AreaName</td>
                    <td>@item.UserName</td>
                    <td>@item.CustomerName</td>
                    <td>@item.StartDate.ToString("g")</td>
                    <td>@item.EndDate.ToString("g")</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="@Url.Action("EditTaskProcessAreaUserCustomer", "TaskProcessAreaUserCustomer", new { id = item.TaskProcessAreaUserCustomerId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteTaskProcessAreaUserCustomer", "TaskProcessAreaUserCustomer", new { id = item.TaskProcessAreaUserCustomerId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No Task Process Areas User Customers found.</td>
            </tr>
        }
    </tbody>
</table>
