@model PMSCRM.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="fw-bold fs-4 mb-3 text-danger">Delete Customer</h3>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this company?</h4>
    <p><strong>Customer Name:</strong> @Model.Name</p>
    <p><strong>Customer ID:</strong> @Model.CustomerId</p>



</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.CustomerId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Customer/ViewCustomers" class="btn btn-secondary">Cancel</a>
</form>
