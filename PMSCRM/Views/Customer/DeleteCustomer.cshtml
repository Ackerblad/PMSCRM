@model PMSCRM.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/buttons.css">

<div class="card shadow-sm p-4 mb-4">
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this customer?</h4>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.EmailAddress</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.CustomerId" method="post">
        <button type="submit" class="btn btn-delete">Delete</button>
        <a href="/Customer/ViewCustomers" class="btn btn-cancel">Cancel</a>
    </form>
</div>
